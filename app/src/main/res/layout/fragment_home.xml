<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_rainy"
    android:backgroundTintMode="multiply"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/temperature"
        style="@style/TextStyleLight"
        android:layout_marginTop="72dp"
        android:text="25"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feel"
        style="@style/TextStyleLight"
        android:layout_marginTop="4dp"
        android:text="Sunny"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature" />

    <LinearLayout
        android:id="@+id/lnr_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/feel">

        <LinearLayout
            android:id="@+id/lnr_min"
            style="@style/LinearRange.Weight"
            android:layout_marginStart="@dimen/main_screen_content_padding">

            <TextView
                android:id="@+id/tv_min_temp"
                style="@style/TextStyleRegular.Range"
                android:text="12" />

            <TextView
                android:id="@+id/tv_min"
                style="@style/TextStyleLight"
                android:text="@string/min" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_current"
            style="@style/LinearRange.Weight">

            <TextView
                android:id="@+id/tv_current"
                style="@style/TextStyleRegular.Range.Centre"
                android:text="15" />

            <TextView
                style="@style/TextStyleLight.Centre"
                android:text="@string/current" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_max"
            style="@style/LinearRange.Weight"
            android:layout_marginEnd="@dimen/main_screen_content_padding">

            <TextView
                android:id="@+id/tv_max"
                style="@style/TextStyleRegular.Range.End"
                android:text="17" />

            <TextView
                style="@style/TextStyleLight.End"
                android:text="@string/max" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnr_range" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_weather_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>