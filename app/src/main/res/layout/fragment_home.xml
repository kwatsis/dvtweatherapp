<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_rainy"
    android:backgroundTint="@color/weather_cloudy"
    android:backgroundTintMode="multiply"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/roboto_light"
        android:text="25"
        android:textColor="@color/white"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_light"
        android:text="Sunny"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature" />


    <LinearLayout
        android:id="@+id/lnr_min"
        style="@style/LinearRange"
        android:layout_marginStart="@dimen/main_screen_content_padding"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feel">

        <TextView
            android:id="@+id/tv_min_temp"
            style="@style/TextStyleRegular"
            android:text="12"
            android:textSize="@dimen/range_text_size" />

        <TextView
            android:id="@+id/tv_min"
            style="@style/TextStyleLight"
            android:gravity="center"
            android:text="@string/min" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_current"
        style="@style/LinearRange"
        android:layout_marginStart="142dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintLeft_toRightOf="@+id/lnr_min"
        app:layout_constraintStart_toEndOf="@+id/lnr_min"
        app:layout_constraintTop_toBottomOf="@+id/feel">

        <TextView
            android:id="@+id/tv_current"
            style="@style/TextStyleRegular"
            android:text="15"
            android:textSize="@dimen/range_text_size" />

        <TextView
            style="@style/TextStyleLight"
            android:gravity="center"
            android:text="@string/current" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_max"
        style="@style/LinearRange"
        android:layout_marginEnd="16dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lnr_min"
        app:layout_constraintTop_toBottomOf="@+id/feel">

        <TextView
            android:id="@+id/tv_max"
            style="@style/TextStyleRegular"
            android:text="17"
            android:textSize="@dimen/range_text_size" />

        <TextView
            style="@style/TextStyleLight"
            android:gravity="center"
            android:text="@string/max" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="121dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_weather_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>